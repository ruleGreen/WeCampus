page{
  background-color: #FBF9FE;
  height:100%;
}
.input-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.row-wrap{
  margin-top: 50rpx;
  display:flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  align-items: center;
  background-color: #FFFFFF;
}
.input{
  height: 100rpx;
  margin-left: 3%;
  width: 94%;
}
.text-area{
  margin-top: 50rpx;
  display:flex;
  flex-direction: row;
  width: 100%;
  height: 350rpx;
  background-color: #FFFFFF;
}
.input-area{
  margin-left: 3%;
  margin-top: 20rpx;
  width: 94%;
  height: 320rpx;
}
.time-text{
  margin-left: 30rpx;
  font-size: 40rpx;
}
.input-Time{
  height: 100rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
  width: 120rpx;
}
.price-text{
  margin-left: 30rpx;
  font-size: 40rpx;
}
.input-price{
  height: 100rpx;
  margin-left: 5%;
  width: 65%;
}

.submit-btn{
  font-size: 50rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  line-height: 100rpx;
  width: 90%;
  height: 100rpx;
  background-color: #6699CC;
  border-radius:5rpx;
  color: #fff;
  text-align: center;
  font-family:Microsoft Yahei;
}