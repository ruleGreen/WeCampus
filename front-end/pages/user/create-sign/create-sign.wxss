/* pages/user/create-sign/create-sign.wxss */
page{
  background-color: #FBF9FE;
  height:100%;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.code-container{
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
}
.text-code{
  font-weight: bolder;
  width: 90%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 150rpx;
  color: #777;
}
.result-container{
  margin-top: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
}
.result-btn{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.text-container{
  margin-top: 50rpx;
  width: 100%;
}
.text-flush{
  margin-left:50rpx;
  font-size:35rpx;
  color: #777;
  line-height: 175%;
  white-space: pre-wrap;
}
.id-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}
.submit-btn{
  font-size: 50rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  line-height: 100rpx;
  width: 90%;
  height: 100rpx;
  background-color: #6699CC;
  border-radius:5rpx;
  color: #fff;
  text-align: center;
  font-family:Microsoft Yahei;
}
