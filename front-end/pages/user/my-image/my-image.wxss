.post-container{
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
  align-items: center;
}
.post-inform{
  flex-direction:row;
  display: flex;
  align-items: center;
  margin: 50rpx 0 80rpx;
}
.post-inform image{
  width: 150rpx;
  height: 150rpx;
}
.post-inform text{
  margin-left: 25px;
  font-size:25px;
  font-family:Microsoft Yahei;
}
.submit-btn{
    font-size: 20px;
    margin-top: 5rpx;
    margin-left: 12px;
    line-height: 60rpx;
    width: 120rpx;
    height: 60rpx;
    background-color: #999999;
    border-radius:5rpx;
    color: #fff;
    text-align: center;
    font-family:Microsoft Yahei;
}

.describe{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 45rpx 30rpx;
    display: flex;
    flex-flow: column nowrap;
    color: #545454;
    line-height: 175%;
    background: #fff;
    margin-top: 15rpx;
    border-bottom: 1px #e5e5e5 solid;
}
.desc-title{
    display: flex;
    font-size: 13pt;
    line-height: 200%;
    margin-bottom: 15rpx;
}
.desc-list{
    display: flex;
    flex-direction: column;
    border-left: 8rpx solid #ddd;
    padding-left: 15rpx;
    color: #777;
    margin-bottom: 15rpx;
    font-size: 10pt;
}
.desc-content{
  text-indent: 20rpx;
  padding-bottom: 15rpx;
}