/* pages/user//my-post/my-post.wxss */
.post-container{
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 10px;
  border-radius: 10rpx;
  box-shadow:0rpx 5rpx 10rpx 5rpx #E0E0E0;
}

.my-post-xy{
  margin-top: 30rpx;
}

.my-post-pt{
  margin-top: 50rpx;
}

.my-post-title{
  margin: 50rpx 0 30rpx 30rpx;
  font-size: 60rpx;
}

.post-inform{
  flex-direction:row;
  display: flex;
  align-items: center;
}
.post-price{
  margin: 10rpx 30rpx 0 150rpx;
  font-size: 30rpx;
  color: #FF0000;
  margin-bottom: 10px;
}
.post-author{
  margin: 10rpx 0 30rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author image{
  width: 60rpx;
  height: 60rpx;
}
.post-author text{
  margin-left: 20px;
}
.post-image{
  width: 100%;
  height: 400rpx;
  margin-bottom: 15px;
}

.post-title{
  font-size:16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-content{
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  display: flex;
  flex-direction: row-reverse;
  font-size: 30px;
  line-height: 16px;
  margin-right: 30px;
  align-items: center;
}
.post-like image{
  height: 20px;
  width:20px;
  margin-right: 12px;
}
.post-like text{
  margin-right: 60rpx;
}