.container {
  display: flex;
  flex-direction: column;
}

.divLine{
 background: #ededed;
 width: 100%;
 height: 5rpx;
 justify-content:center;
 margin-bottom: 12px;
}
.post-price{
  margin: 10rpx 30rpx 0 50rpx;
  font-size: 30rpx;
  color: #FF0000;
  margin-bottom: 0px;
}
.image-container{
  width: 100%;
  display: flex;
  flex-direction: row;  
  justify-content: center;  
}
.head-image {
  width: 90%;
  margin-top: 15px;
  margin-bottom: 10px;
}

.title {
  font-size: 24px;
  margin: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.author-date {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-left: 30rpx;
  align-items: center;
  justify-content: space-between;
  font-size:16px;
}

.author-box {
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-bottom: 15rpx;
}

.avatar {
  height: 50rpx;
  width: 50rpx;
}

.author {
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.date {
  color: #919191;
  margin-left: 300rpx;
}
.post-rank{
  margin: 10rpx 30rpx 0 200rpx;
  font-size: 30rpx;
  color: #000000;
  margin-bottom: 0px;
}
.detail {
  color: #666;
  margin: 30rpx 22rpx 0;
  line-height: 44rpx;
  letter-spacing: 1.5px;
  font-size:12px;
}

/*点赞和评论*/
.tool{
  height: 64rpx;
  margin: 0 28rpx 20rpx 0;
  display: flex;
  justify-content: center;
}
.tool-item{
  align-items: center;
  margin-right: 30rpx;
  display: flex;
}

.tool-item:last-child{
  margin-right: 0rpx;
}

.tool-item image{
  height: 80rpx;
  width:80rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
}

.comment image{
  transform: scale(.85);
}

.music {
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.9;
}

.submit-btn{
  font-size: 24rpx;
  margin-left: 300rpx;
  margin-top: 5rpx;
  margin-right: 8rpx;
  line-height: 60rpx;
  width: 120rpx;
  height: 60rpx;
  background-color: #6699CC;
  border-radius:5rpx;
  color: #fff;
  text-align: center;
  font-family:Microsoft Yahei;
}