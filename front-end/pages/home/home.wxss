/* pages/home/home.wxss */
.container {
    background-color: #efeff4;
    width: 100%;
    height: 100%;
    flex-direction: column;
    display: flex;
    align-items: center;
    min-height: 100vh;
}
.navbar{ 
  width: 100%;
  flex: none; 
  display: flex; 
  background: #fff; 
} 
.navbar .item{ 
 position: relative; 
 flex: auto; 
 font-size: 30rpx;
 text-align: center; 
 line-height: 100rpx; 
} 
.navbar .item.active{ 
 color: #0F88EB; 
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
 background: #0F88EB; 
} 
swiper{
  width:100%;
  height:450rpx;
}
swiper image{
  width:100%;
  height:450rpx;
}
.btn-box{
  margin: 20rpx 10px 20rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.btn-box image{
  margin: 0 10px 0 10px;
  width: 340rpx;
  height: 140rpx;
}
.home-list{
  flex-direction: column;
  display: flex;
  margin: 5px;
  width: 98%;
  height: 100%;
}
.post-container{
  flex-direction: row;
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 5px 0 0 0;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  border-radius: 10rpx;
  padding-bottom: 10px;
  padding-top: 10px;
  box-shadow:5rpx 5rpx 10rpx 1rpx #E0E0E0; 
}
.text-container{
  flex-direction: column;
  display: flex;
}
.post-image{
  width: 100rpx;
  height: 100rpx;
  margin: 0px 0 0 10px;
}
.text-container text{
  margin: 5px 10px 5px 5px;
  font-size: 15px;
}
.post-date{
  margin: 5px 0 5px 400rpx;
  font-size: 10px;
}
